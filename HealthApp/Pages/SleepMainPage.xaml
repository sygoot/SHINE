<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.SleepMainPage"
             Title="Sleep"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Chart Placeholder -->
            <Border StrokeShape="RoundRectangle 10" HeightRequest="150" BackgroundColor="{StaticResource Gray100}">
                <Label Text="[Sleep Chart Placeholder]"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </Border>

            <!-- Sleep Time Range -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                <Label Text="{Binding SleepStartTime, StringFormat='{0:HH:mm}'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}" />
                <Label Text="-"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}" />
                <Label Text="{Binding SleepEndTime, StringFormat='{0:HH:mm}'}"
                       FontSize="18"
                       FontAttributes="Bold"
                       TextColor="{StaticResource White}" />
            </HorizontalStackLayout>

            <!-- Sleep Duration -->
            <Label Text="{Binding SleepDuration, StringFormat='Duration: {0:hh}h {0:mm}m'}"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="{StaticResource White}"
                   HorizontalOptions="Center" />

            <!-- Fetch Data Button -->
            <Button Text="Fetch Sleep Data"
                    Command="{Binding FetchSleepCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

            <!-- Add Data Button -->
            <Button Text="Add Data"
                    Clicked="NavigateToAddData"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"
                    CornerRadius="10"
                    HorizontalOptions="Center"
                    VerticalOptions="Center" />

            <!-- Sleep Tips Section -->
            <Border StrokeShape="RoundRectangle 10" Padding="10" BackgroundColor="{StaticResource DarkBackground}">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Sleep Tips"
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}" />
                </VerticalStackLayout>
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
