<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.StepsMainPage"
             Title="Steps"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Weekly Steps Overview -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10">
                <Label Text="[Weekly Steps Chart Placeholder]"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </Border>

            <!-- Steps Progress Section -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <!-- Steps Count -->
                    <HorizontalStackLayout Spacing="10" VerticalOptions="Center">
                        <Image Source="steps_icon_placeholder.png"
                               WidthRequest="24"
                               HeightRequest="24" />
                        <Label Text="4200"
                               FontSize="24"
                               FontAttributes="Bold"
                               TextColor="{StaticResource TextPrimary}" />
                    </HorizontalStackLayout>

                    <!-- Progress Bar Placeholder -->
                    <Label Text="[Progress Bar Placeholder]"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           TextColor="{StaticResource Gray500}" />

                    <!-- Target Label -->
                    <HorizontalStackLayout HorizontalOptions="Center">
                        <Label Text="0"
                               TextColor="{StaticResource TextPrimary}" />
                        <Label Text="/"
                               TextColor="{StaticResource TextPrimary}" />
                        <Label Text="8000"
                               TextColor="{StaticResource TextPrimary}" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>

            <!-- Steps by Time of Day -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <Label Text="[Steps by Time of Day Chart Placeholder]"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
