<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.RegisterPage"
             Title="Register"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">
            <!-- Logo -->
            <Image Source="Resources/Images/logo.svg"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   WidthRequest="100"
                   HeightRequest="100" />

            <!-- First Name Entry -->
            <Entry Placeholder="First Name"
                   Text="{Binding FirstName}"
                   Completed="FirstNameCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Last Name Entry -->
            <Entry Placeholder="Last Name"
                   x:Name="LastNameEntry"
                   Text="{Binding LastName}"
                   Completed="LastNameCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Username Entry -->
            <Entry Placeholder="Username"
                   x:Name="UsernameEntry"
                   Text="{Binding Username}"
                   Completed="UsernameCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Email Entry -->
            <Entry Placeholder="Email"
                   x:Name="EmailEntry"
                   Text="{Binding Email}"
                   Keyboard="Email"
                   Completed="EmailCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Password Entry -->
            <Entry Placeholder="Password"
                   x:Name="PasswordEntry"
                   Text="{Binding Password}"
                   IsPassword="True"
                   Completed="PasswordCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Confirm Password Entry -->
            <Entry Placeholder="Confirm Password"
                   x:Name="ConfirmPasswordEntry"
                   Text="{Binding ConfirmPassword}"
                   IsPassword="True"
                   Completed="ConfirmPasswordCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Gender Picker -->
            <Picker Title="Select Gender"
                    x:Name="GenderPicker"
                    ItemsSource="{Binding Genders}"
                    SelectedItem="{Binding SelectedGender}"
                    BackgroundColor="{StaticResource White}"
                    TextColor="{StaticResource TextPrimary}" />

            <!-- Height Entry -->
            <Entry Placeholder="Height (cm)"
                   x:Name="HeightEntry"
                   Text="{Binding Height}"
                   Keyboard="Numeric"
                   Completed="HeightCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Weight Entry -->
            <Entry Placeholder="Weight (kg)"
                   x:Name="WeightEntry"
                   Text="{Binding Weight}"
                   Keyboard="Numeric"
                   Completed="WeightCompleted"
                   BackgroundColor="{StaticResource White}"
                   TextColor="{StaticResource TextPrimary}" />

            <!-- Date of Birth DatePicker -->
            <DatePicker Date="{Binding DateOfBirth}"
                        x:Name="DatePicker"
                        Format="dd/MM/yyyy"
                        BackgroundColor="{StaticResource White}"
                        TextColor="{StaticResource TextPrimary}" />

            <!-- Register Button -->
            <Button Text="Register"
                    Command="{Binding RegisterCommand}"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
