<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.MainPage"
             Title="Welcome, Username!"
             BackgroundColor="{StaticResource PrimaryDark}">

    <Grid Padding="20" RowSpacing="20" ColumnSpacing="20" VerticalOptions="FillAndExpand">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Przyciski nawigacji i data -->
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Grid.Row="0" Grid.ColumnSpan="2">
            <Button Text="&lt;"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource White}"
                    Clicked="OnPreviousDayClicked" />

            <Button Text="{Binding SelectedDate, StringFormat='{0:dd MMM yyyy}'}"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource White}"
                    IsEnabled="False" />

            <Button Text="&gt;"
                    BackgroundColor="Transparent"
                    TextColor="{StaticResource White}"
                    Clicked="OnNextDayClicked"
                    IsEnabled="{Binding IsNextDayEnabled}" />
        </StackLayout>

        <!-- Emotka w Å›rodku -->
        <Image Source="target.svg"
                   WidthRequest="60"
                   HeightRequest="60"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Grid.Row="2" Grid.ColumnSpan="2">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="NavigateToTargetSelection" />
            </Image.GestureRecognizers>
        </Image>


        <!-- Ikona Sleep -->
        <ImageButton Grid.Row="1" Grid.Column="0"
                     Source="sleep.svg"
                     WidthRequest="15"
                     HeightRequest="15"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Clicked="NavigateToSleep" />

        <!-- Ikona Steps -->
        <ImageButton Grid.Row="1" Grid.Column="1"
                     Source="steps.svg"
                     WidthRequest="15"
                     HeightRequest="15"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Clicked="NavigateToSteps" />

        <!-- Ikona Nutrition -->
        <ImageButton Grid.Row="3" Grid.Column="0"
                     Source="nutrition.svg"
                     WidthRequest="15"
                     HeightRequest="15"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Clicked="NavigateToFood" />

        <!-- Ikona Hydration -->
        <ImageButton Grid.Row="3" Grid.Column="1"
                     Source="hydration.svg"
                     WidthRequest="15"
                     HeightRequest="15"
                     BackgroundColor="Transparent"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"
                     Clicked="NavigateToWater" />
    </Grid>
</ContentPage>