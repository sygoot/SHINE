<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:HealthApp.Controls"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.WaterMainPage"
             Title="Water"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Weekly Water Intake Chart Placeholder -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="10"
                    HeightRequest="150">
                <Label Text="[Weekly Water Intake Chart Placeholder]"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </Border>

            <!-- Water Intake Summary -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                      ColumnDefinitions="*,Auto">

                    <!-- Water Glass Icon z animowaną wodą -->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                          HeightRequest="150" WidthRequest="150">

                        <!-- Tło szklanki (możesz użyć obrazka SVG/PNG) -->
                        <Image Source="glass_outline.png"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               HeightRequest="150"
                               WidthRequest="150" />

                        <!-- Animowana woda -->
                        <controls:WaterGlassView Progress="{Binding DailyProgress}"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center"
                                               HeightRequest="130"
                                               WidthRequest="130"/>
                    </Grid>

                    <!-- Dzisiejsze spożycie wody -->
                    <Label Text="{Binding TodaysWaterIntake, StringFormat='Dzisiaj: {0} mL'}"
                           Grid.Row="1" Grid.Column="0"
                           HorizontalOptions="Start"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextPrimary}"
                           FontAttributes="Bold"
                           FontSize="Medium" />

                    <!-- Cel dzienny -->
                    <Label Text="Cel dzienny: 3000 mL"
                           Grid.Row="1" Grid.Column="1"
                           HorizontalOptions="End"
                           VerticalOptions="Center"
                           TextColor="{StaticResource TextPrimary}" />

                    <!-- Przykładowe przyciski dodawania wody -->
                    <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2"
                                           Spacing="10" HorizontalOptions="Center"
                                           Margin="0,10,0,0">
                        <Button Text="100"
                                Command="{Binding AddWaterCommand}"
                                CommandParameter="100"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                WidthRequest="70"
                                HeightRequest="50" />
                        <Button Text="250"
                                Command="{Binding AddWaterCommand}"
                                CommandParameter="250"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                WidthRequest="70"
                                HeightRequest="50" />
                        <Button Text="500"
                                Command="{Binding AddWaterCommand}"
                                CommandParameter="500"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="{StaticResource White}"
                                WidthRequest="70"
                                HeightRequest="50" />
                    </HorizontalStackLayout>

                </Grid>
            </Border>

            <!-- Hourly Water Intake Summary -->
            <Border BackgroundColor="{StaticResource Gray200}"
                    StrokeShape="RoundRectangle 10"
                    Padding="20">
                <Label Text="[Hourly Water Intake Placeholder]"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       TextColor="{StaticResource Gray500}" />
            </Border>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>