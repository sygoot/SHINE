<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Pages.FoodMainPage"
             Title="Jedzenie"
             BackgroundColor="{StaticResource PrimaryDark}">

    <Grid RowDefinitions="*,Auto" Padding="20" RowSpacing="20">

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="25" Padding="10">

                <!-- Calorie Progress Section -->
                <Frame CornerRadius="15"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="20"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="15">
                        <!-- Goal -->
                        <Frame CornerRadius="10"
                               BackgroundColor="{StaticResource Primary}"
                               Padding="15"
                               HorizontalOptions="Center">
                            <Label Text="Cel: 2500 kcal"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource White}"
                                   HorizontalOptions="Center"/>
                        </Frame>

                        <!-- Progress Visualization -->
                        <BoxView Color="{StaticResource Primary}"
                                 HeightRequest="5"
                                 HorizontalOptions="Fill"/>

                        <!-- Current Progress -->
                        <Frame CornerRadius="10"
                               BackgroundColor="{StaticResource Gray800}"
                               Padding="15"
                               HorizontalOptions="Center">
                            <Label Text="Aktualnie: 1200 kcal"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource White}"
                                   HorizontalOptions="Center"/>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Weekly Summary -->
                <Frame CornerRadius="15"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Tygodniowe podsumowanie"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}"
                               HorizontalOptions="Center"/>

                        <!-- Placeholder for chart -->
                        <BoxView HeightRequest="150"
                                 BackgroundColor="{StaticResource Gray800}"
                                 CornerRadius="10"/>
                    </VerticalStackLayout>
                </Frame>

                <!-- Nutritional Summary -->
                <Frame CornerRadius="15"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="20">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Składniki odżywcze"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="{StaticResource White}"
                               HorizontalOptions="Center"/>

                        <Grid ColumnDefinitions="*,*,*" 
                              RowDefinitions="Auto,Auto"
                              Padding="10">
                            <Label Text="Białko"
                                   Grid.Column="0"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource White}"/>
                            <Label Text="Węglowodany"
                                   Grid.Column="1"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource White}"/>
                            <Label Text="Tłuszcze"
                                   Grid.Column="2"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource White}"/>

                            <Label Text="{Binding TotalProtein, StringFormat='{}{0} g'}"
                                   Grid.Row="1"
                                   Grid.Column="0"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}"/>
                            <Label Text="{Binding TotalCarbs, StringFormat='{}{0} g'}"
                                   Grid.Row="1"
                                   Grid.Column="1"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}"/>
                            <Label Text="{Binding TotalFat, StringFormat='{}{0} g'}"
                                   Grid.Row="1"
                                   Grid.Column="2"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}"/>
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Add Meal Button -->
        <Button Grid.Row="1"
                Text="DODAJ POSIŁEK"
                Clicked="NavigateToAddMeal"
                CornerRadius="15"
                HeightRequest="60"
                FontSize="16"
                FontAttributes="Bold"
                BackgroundColor="{StaticResource Primary}"
                TextColor="{StaticResource White}"
                Margin="0,10"/>

    </Grid>

</ContentPage>
