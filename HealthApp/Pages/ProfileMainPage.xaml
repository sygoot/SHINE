<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="HealthApp.Pages.ProfileMainPage"
             Title="Profile"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Header Section -->
            <Grid ColumnDefinitions="*,Auto,*" VerticalOptions="Start">
                <Button ImageSource="back_icon.svg"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"
                        WidthRequest="30"
                        HeightRequest="30"/>

                <Border StrokeShape="Ellipse" 
                        WidthRequest="120" 
                        HeightRequest="120"
                        BackgroundColor="{StaticResource Gray200}"
                        HorizontalOptions="Center"
                        Grid.Column="1">
                    <Image Source="profile_placeholder.png"
                           Aspect="AspectFill"
                           HeightRequest="120"
                           WidthRequest="120"/>
                </Border>

                <Button ImageSource="settings_icon.svg"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End"
                        WidthRequest="30"
                        HeightRequest="30"
                        Grid.Column="2"/>
            </Grid>

            <!-- User Details Section -->
            <VerticalStackLayout Spacing="20">
                <!-- Gender -->
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="15"
                       HasShadow="False">
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="gender_icon.svg"
                               WidthRequest="25"
                               HeightRequest="25"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="Gender"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="16"
                               PlaceholderColor="{StaticResource Gray500}"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>

                <!-- Height -->
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="15"
                       HasShadow="False">
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="height_icon.svg"
                               WidthRequest="25"
                               HeightRequest="25"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="Height (cm)"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="16"
                               PlaceholderColor="{StaticResource Gray500}"
                               Keyboard="Numeric"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>

                <!-- Weight -->
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="15"
                       HasShadow="False">
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="weight_icon.svg"
                               WidthRequest="25"
                               HeightRequest="25"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="Weight (kg)"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="16"
                               PlaceholderColor="{StaticResource Gray500}"
                               Keyboard="Numeric"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>

                <!-- Birth Date -->
                <Frame CornerRadius="10"
                       BackgroundColor="{StaticResource Gray900}"
                       Padding="15"
                       HasShadow="False">
                    <Grid ColumnDefinitions="40,*">
                        <Image Source="birthday_icon.svg"
                               WidthRequest="25"
                               HeightRequest="25"
                               VerticalOptions="Center"/>
                        <Entry Placeholder="Birth Date (dd.mm.yyyy)"
                               TextColor="{StaticResource TextPrimary}"
                               FontSize="16"
                               PlaceholderColor="{StaticResource Gray500}"
                               Keyboard="Numeric"
                               Grid.Column="1"/>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

            <!-- Save Button -->
            <Button Text="Save Changes"
                    CornerRadius="25"
                    HeightRequest="50"
                    Margin="0,20"
                    FontSize="16"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>