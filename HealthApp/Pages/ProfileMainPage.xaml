<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Pages.ProfileMainPage"
             Title="Profile"
             BackgroundColor="{StaticResource PrimaryDark}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" VerticalOptions="Center">

            <!-- Header Section -->
            <Grid ColumnDefinitions="*,Auto,*" VerticalOptions="Start" Padding="0">
                <Button ImageSource="back_icon.svg"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Start"
                        WidthRequest="30"
                        HeightRequest="30"
                        Command="{Binding GoBackCommand}"/>

                <Border StrokeShape="Ellipse" WidthRequest="120" HeightRequest="120"
                        BackgroundColor="{StaticResource Gray200}"
                        HorizontalOptions="Center" Grid.Column="1" Margin="0,0,0,0">
                    <Image Source="profile_placeholder.png"
                           Aspect="AspectFill"
                           HeightRequest="120"
                           WidthRequest="120"/>
                </Border>

                <Button ImageSource="settings_icon.svg"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End"
                        WidthRequest="30"
                        HeightRequest="30"
                        Grid.Column="2"/>
            </Grid>

            <!-- User Details Section -->
            <VerticalStackLayout Spacing="15" HorizontalOptions="Center" WidthRequest="300">

                <!-- Gender -->
                <Label Text="Gender" FontSize="14" TextColor="{StaticResource White}" Margin="0,0"/>
                <Frame CornerRadius="10" BackgroundColor="{StaticResource White}" Padding="0" BorderColor="{StaticResource Gray300}" HasShadow="False">
                    <Picker Title="Select Gender"
                            ItemsSource="{Binding Genders}"
                            SelectedItem="{Binding SelectedGender, Mode=TwoWay}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Gray300}"
                            HeightRequest="40"
                            Margin="10,0"/>
                </Frame>

                <!-- Height -->
                <Label Text="Height (cm)" FontSize="14" TextColor="{StaticResource White}" Margin="0,0"/>
                <Frame CornerRadius="10" BackgroundColor="{StaticResource White}" Padding="0" BorderColor="{StaticResource Gray300}" HasShadow="False">
                    <Entry Placeholder="Enter your height"
                           Text="{Binding Height, Mode=TwoWay}"
                           Keyboard="Numeric"
                           BackgroundColor="Transparent"
                           TextColor="{StaticResource Gray300}"
                           HeightRequest="40"
                           Margin="10,0"/>
                </Frame>

                <!-- Weight -->
                <Label Text="Weight (kg)" FontSize="14" TextColor="{StaticResource White}" Margin="0,0"/>
                <Frame CornerRadius="10" BackgroundColor="{StaticResource White}" Padding="0" BorderColor="{StaticResource Gray300}" HasShadow="False">
                    <Entry Placeholder="Enter your weight"
                           Text="{Binding Weight, Mode=TwoWay}"
                           Keyboard="Numeric"
                           BackgroundColor="Transparent"
                           TextColor="{StaticResource Gray300}"
                           HeightRequest="40"
                           Margin="10,0"/>
                </Frame>

                <!-- Date of Birth -->
                <Label Text="Date of Birth" FontSize="14" TextColor="{StaticResource White}" Margin="0,0"/>
                <Frame CornerRadius="10" BackgroundColor="{StaticResource White}" Padding="0" BorderColor="{StaticResource Gray300}" HasShadow="False">
                    <DatePicker Date="{Binding DateOfBirth, Mode=TwoWay}"
                                Format="dd/MM/yyyy"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Gray300}"
                                HeightRequest="40"
                                Margin="10,0"/>
                </Frame>

            </VerticalStackLayout>

            <!-- Save Button -->
            <Button Text="Save"
                    Command="{Binding SaveCommand}"
                    CornerRadius="25"
                    HeightRequest="50"
                    FontSize="16"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="{StaticResource White}"
                    FontAttributes="Bold"
                    WidthRequest="200"
                    HorizontalOptions="Center"
                    Margin="20,20"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
