<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HealthApp.Pages.FoodPortionDetailsPage"
             Title="Rozmiar Porcji"
             BackgroundColor="{StaticResource PrimaryDark}">

    <VerticalStackLayout Padding="20" Spacing="20">

        <!-- Food Portion Selection -->
        <Border BackgroundColor="{StaticResource Gray200}"
                StrokeShape="RoundRectangle 10"
                Padding="10">
            <VerticalStackLayout Spacing="10">

                <!-- Food Name and "Favorite" icon -->
                <Grid ColumnDefinitions="*,Auto">
                    <Label Text="{Binding SelectedFood.Name}"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Start" />

                    <Button Text="&#x2606;"
                            FontSize="18"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource TextPrimary}"
                            VerticalOptions="Center"
                            HorizontalOptions="End" />
                </Grid>

                <!-- Portion Size Adjustment -->
                <Grid RowDefinitions="Auto" ColumnDefinitions="*,Auto,Auto" Margin="0,10,0,0">
                    <Label Text="{Binding CurrentPortionInGrams, StringFormat='{0} g'}"
                           FontAttributes="Bold"
                           TextColor="{StaticResource TextPrimary}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />

                    <Button Text="-"
                            Grid.Column="1"
                            Command="{Binding DecreasePortionCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}"
                            CornerRadius="10"
                            VerticalOptions="Center"
                            HorizontalOptions="End"
                            WidthRequest="40" />

                    <Button Text="+"
                            Grid.Column="2"
                            Command="{Binding IncreasePortionCommand}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource White}"
                            CornerRadius="10"
                            VerticalOptions="Center"
                            HorizontalOptions="Start"
                            WidthRequest="40" />
                </Grid>

                <!-- Confirm Portion Button (Add Ingredient) -->
                <Button Text="Add Ingredient"
                        Command="{Binding AddIngredientCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="{StaticResource White}"
                        FontAttributes="Bold"
                        CornerRadius="10"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="140"
                        Margin="0,10,0,0" />

            </VerticalStackLayout>
        </Border>

        <!-- Nutritional Information -->
        <Border BackgroundColor="{StaticResource Gray200}"
                StrokeShape="RoundRectangle 10"
                Padding="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="Makroskładniki odżywcze"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"
                       HorizontalOptions="Center" />

                <Label Text="{Binding CalculatedCalories, StringFormat='Kalorie: {0:F0}'}"
                       TextColor="{StaticResource TextPrimary}" />
                <Label Text="{Binding CalculatedProtein, StringFormat='Białko: {0:F1} g'}"
                       TextColor="{StaticResource TextPrimary}" />
                <Label Text="{Binding CalculatedCarbohydrate, StringFormat='Węglowodany: {0:F1} g'}"
                       TextColor="{StaticResource TextPrimary}" />
                <Label Text="{Binding CalculatedFat, StringFormat='Tłuszcze: {0:F1} g'}"
                       TextColor="{StaticResource TextPrimary}" />
            </VerticalStackLayout>
        </Border>

    </VerticalStackLayout>

</ContentPage>
